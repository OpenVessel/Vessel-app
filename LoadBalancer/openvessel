server {
        server_name demo.openvessel.org;

        location /static {
                alias /home/leslie/Vessel-app/Back-end/vessel_app/static;
        }

        location / {
                proxy_pass http://localhost:8000/;
                include /etc/nginx/proxy_params;
                proxy_redirect off;

        }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/demo.openvessel.org/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/demo.openvessel.org/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = demo.openvessel.org) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


        listen 80;
        server_name demo.openvessel.org;
    return 404; # managed by Certbot